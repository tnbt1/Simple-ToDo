# Database
POSTGRES_DB=todoapp
POSTGRES_USER=todouser
POSTGRES_PASSWORD=your-secure-password-change-me

# NextAuth.js
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-please-change-in-production

# Database URL for app
DATABASE_URL=postgresql://todouser:your-secure-password-change-me@postgres:5432/todoapp?schema=public

# Node Environment
NODE_ENV=production

# Application Version
APP_VERSION=1.0.0

# Redis Optimization Settings
# Set to true to automatically apply system optimizations for Redis
REDIS_OPTIMIZE=true

# System Configuration (automatically applied if REDIS_OPTIMIZE=true)
# vm.overcommit_memory=1 will be set to eliminate Redis warnings
# net.core.somaxconn=65535 will be set for better performance